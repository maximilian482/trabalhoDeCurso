    <!-- Estilo customizado -->
  
    <title>+ Coleta</title>
  </head>
  <body>


    <section id="home"><!-- Início Seção-->
      <div class="container">
        <div class="row">
          <div class="col-lg-12 d-sm-flex">
            
                            
            <div class="col-lg-6 col-md-6 col-sm-12">
                            

              <form class="mt-4 mb-4 text-center" method="post">
                  <h3>Entrar</h3>

                  <%- include('inc/content/alerts') -%>

                  <br><br>

                  <input id="input" name="email" class="form-control mr-2" type="text" placeholder="Digite seu usuário" value="<%= body.email%>"></br>
                  <input id="input" name="password" class="form-control mr-2" type="password" placeholder="Digite sua senha"><hr>
                  <!--<span class="btn-show-pass"><i class="fas fa-eye"></i></span><hr>-->
                  <input  class="btn btn-primary" type="submit" value="Logar" id="submit"><br><br>
                  <div class="checkbox mb-3">
                    <label>
                      <input type="checkbox" value="remember-me"> Lembre-me
                    </label>
                  </div>         
              

                  <p class="forgot"><a href="/logincadastro"> FAZER CADASTRO </p>

                  <p>Logo estará disponível para
                    <a href="" class="btn btn-outline-light">
                      <i class="fab fa-android fa-lg text-info"></i></a>
                    <a href="" class="btn btn-outline-light">
                      <i class="fab fa-apple text-info"></i>
                    </a>
                  </p>  
                  </form> 
                </div>
                <div class="logo col-lg-6 col-md-6 col-sm-12">
                  <img src="images/coleta.png">
                </div> 
            </div>
            
          </div> 
          
        </div>
     
    </section><!-- Fim Seção-->

