<script src="/js/mcFileReader.js"></script>
<script src="/js/mc-formsave.js"></script>
<script src="/js/mc-grid.js"></script>
    
    <script>
  
    new McGrid({
    
    onUpdateLoad: (form, name, data) => {

        let input = form.querySelector(`[name=${name}]`);

        switch(name) {

            case 'photo':
                form.querySelector('img').src = '/' + data[name];
                break;
            
            default:
                if (input) input.value = data[name];
        }
    }
});

</script>