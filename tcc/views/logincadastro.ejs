    <!-- Estilo customizado -->
    

    <link rel="stylesheet" href="css/estilo.css">

    <title>+ Coleta</title>
  </head>
  <body>


    <section id="home"><!-- Início Seção-->
      <div class="container">
        <div class="row">
          <div class="col-lg-12 d-sm-flex">
            
                            
            <div class="col-lg-6 col-md-6 col-sm-12">
              <form class="text-center" method="post" action="/logincadastro">
                  <h3>CADASTRO</h3>

                  <%- include('inc/content/alerts') -%>

                  <br>
              
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="inputName">Nome</label>
                        <input type="text" id="inputName" name="name" class="form-control" value="<%= body.name %>">
                      </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="inputEmail">E-mail</label>
                            <input type="email" id="inputEmail" name="email" class="form-control" value="<%= body.email %>">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="inputPassword">Senha</label>
                            <input type="password" id="inputPassword" name="password" class="form-control" value="<%= body.password %>">
                        </div>
                    </div>

                    <div class="form-group">
                      <label for="inputPhotoCreate">Foto</label>
                      <img style="max-width: 128px; max-height: 128px; display: block;" src="">
                      <input type="file" class="form-control" id="inputPhotoCreate" name="photo">
                    </div>
                 
                  
                  <input  class="btn btn-primary" type="submit" value="Cadastrar" id="submit"><br><br> 
                          
              

                  <p class="forgot"><a href="/login"> VOLTAR PARA LOGIN </p>

                  <p>Logo estará disponível para
                    <a href="" class="btn btn-outline-light">
                      <i class="fab fa-android fa-lg text-info"></i></a>
                    <a href="" class="btn btn-outline-light">
                      <i class="fab fa-apple text-info"></i>
                    </a>
                  </p> 
                  
              </form> 
              </div>
              <div class="logo col-lg-6 col-md-6 col-sm-12">
                <img src="images/coleta.png">
              </div> 
          </div>
          
        </div> 
        
      </div>
      
  
    </section><!-- Fim Seção-->

    <!-- Optional JavaScript; choose one of the two! -->

