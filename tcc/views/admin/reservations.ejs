<%- include("inc/header") -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Agenda de coletas do Motorista
        </h1>
        <ol class="breadcrumb">
          <li><a href="/admin/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">Agenda Motorista</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
                class="fa fa-plus"></i>
              Novo</a>
          </div>
          <div class="box-header" style="height:44px;">

            <div class="box-tools">
              <form action="">
                <div class="form-group" style="width: 182px; float: left">
                  <div class="input-group">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <input type="date" name="start" class="form-control unstyled" value="<%= date.start %>">
                  </div>
                </div>
                <div class="form-group" style="width: 182px; float: left">
                  <div class="input-group">
                    <div class="input-group-addon">
                      até
                    </div>
                    <input type="date" name="end" class="form-control unstyled" value="<%= date.end %>">
                  </div>
                </div>
                <div class="form-group" style="float: left; margin-left: 7px;">
                  <button type="submit" class="btn btn-default">OK</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Ítem</th>
                    <th>Qtd</th>
                    <th>Nome</th>
                    <th>Phone</th>
                    <th>Cidade</th>
                    <th>Uf</th>
                    <th>Endereço</th>
                    <th>Nº</th>
                    <th>CEP</th>
                    <th>Data</th>
                    <th>Hora</th>
                    <th style="min-width: 134px;">Ações</th>
                  </tr>
              </thead>
              <tbody>
                <% data.forEach(row => { %>
                <tr data-row="<%= JSON.stringify(row) %>">
                    <td><%= row.id %></td>
                    <td><%= row.item %></td>
                    <td><%= row.qtd_item %></td>
                    <td><%= row.name %></td>
                    <td><%= row.phone %></td>
                    <td><%= row.city %></td>
                    <td><%= row.uf %></td>
                    <td><%= row.address %></td>
                    <td><%= row.number %></td>
                    <td><%= row.zip %></td>
                    <td><%= moment(row.date).format("DD[/]MM[/]YY") %></td>
                    <td><%= row.time %></td>
                  <td><button type="button" class="btn btn-xs btn-info btn-update"><i
                        class="fa fa-pencil"></i> Editar</button>&nbsp;<button type="button" class="btn btn-xs btn-danger btn-delete"><i
                        class="fa fa-trash"></i> Excluir</button></td>
                </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
          <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
              <li class="active"><a href="#">«</a></li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">»</a></li>
            </ul>
          </div>
          <!-- /.box-footer -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

